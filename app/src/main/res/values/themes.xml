    <style name="Theme.Font.Title" parent="Base.Theme.StandardHW1">
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#464444</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Font.desc" parent="Base.Theme.StandardHW1">
        <item name="android:fontFamily">@font/outfit_light</item>
